# Environment variables for MCP Proxy
# ===========================================
# Cloud deployment configuration
# ===========================================

# Timezone configuration
TZ=Etc/UTC

# Network configuration for cloud deployment
# Original: HOST=127.0.0.1 (local only)
# Updated for cloud: HOST=0.0.0.0 (allow external connections)
HOST=0.0.0.0
TRANSPORT=sse
PORT=8000

# MCP Proxy configuration
# Note: Replace with your actual tokens for production deployment
CHANNEL_ACCESS_TOKEN=***REMOVED***
DESTINATION_USER_ID=***REMOVED***
EXA_API_KEY=***REMOVED***

# Additional cloud deployment settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
